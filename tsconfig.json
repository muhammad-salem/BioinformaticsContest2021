{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"declaration": true,
		"importHelpers": true,
		"inlineSources": false,
		"declarationMap": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "Node",
		"target": "ES2020",
		"module": "ES2020",
		"lib": [
			"ES2020"
		],
		"strict": true,
		"strictPropertyInitialization": false,
		"removeComments": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"files": [
		"src/index.ts"
	],
	"compileOnSave": true
}